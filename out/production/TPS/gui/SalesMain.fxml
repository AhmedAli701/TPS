<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox nodeOrientation="RIGHT_TO_LEFT" visible="false" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="gui.SalesMainController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="التاريخ">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <DatePicker fx:id="dpSalesDatePicker" />
                <AnchorPane prefHeight="25.0" prefWidth="100.0" />
                <Label layoutX="10.0" layoutY="10.0" text="نوع العرض">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cboxSalesViewStyle" prefHeight="25.0" prefWidth="122.0" visibleRowCount="3" />
                <Button fx:id="btnSalesView" mnemonicParsing="false" onAction="#btnSalesViewOnAction" text="عرض" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        <TableView fx:id="tableSales" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="cnSalesId" editable="false" maxWidth="50.0" minWidth="40.0" prefWidth="50.0" sortable="false" text="رقم" />
                <TableColumn fx:id="cnSalesName" editable="false" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" sortable="false" text="البضاعة" />
                <TableColumn fx:id="cnSalesAmount" editable="false" maxWidth="60.0" minWidth="60.0" prefWidth="70.0" sortable="false" text="العدد" />
                <TableColumn fx:id="cnSalesSoldPrice" editable="false" maxWidth="80.0" minWidth="80.0" sortable="false" text="سعر البيع" />
                <TableColumn fx:id="cnSalesPaid" editable="false" maxWidth="80.0" minWidth="80.0" sortable="false" text="المدفوع" />
                <TableColumn fx:id="cnSalesDate" editable="false" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" sortable="false" text="التاريخ" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_LEFT" spacing="8.0">
            <children>
                <Label text="إجمالى المبيعات :" />
                <TextField fx:id="txtTotalSales" editable="false" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
</VBox>
