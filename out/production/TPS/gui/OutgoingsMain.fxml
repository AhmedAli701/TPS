<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="outgoingsVBox" nodeOrientation="RIGHT_TO_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OutgoingsMainController">
    <children>
        <HBox spacing="5.0">
            <children>
                <Label text="التاريخ">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <DatePicker fx:id="dpOutgoings" />
                <AnchorPane prefHeight="25.0" prefWidth="100.0" />
                <Label layoutX="10.0" layoutY="10.0" text="نوع العرض">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cboxOutgoingsViewStyle" prefHeight="25.0" prefWidth="122.0" visibleRowCount="3" />
                <Button fx:id="btnOutgoingsView" mnemonicParsing="false" onAction="#btnOutgoingsViewOnAction" text="عرض" />
            </children>
        </HBox>
        <TableView fx:id="tableOutgoings" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="columnId" editable="false" maxWidth="50.0" minWidth="40.0" prefWidth="50.0" sortable="false" text="رقم" />
                <TableColumn fx:id="columnDetails" editable="false" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" sortable="false" text="بيان" />
                <TableColumn fx:id="columnValue" editable="false" maxWidth="80.0" minWidth="80.0" sortable="false" text="مصروف" />
                <TableColumn fx:id="columnDate" editable="false" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" sortable="false" text="التاريخ" />
            </columns>
        </TableView>
        <HBox alignment="CENTER_LEFT" spacing="8.0">
            <children>
                <Label text="إجمالى المصروفات" />
            <TextField fx:id="txtTotalOutgoings" editable="false" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
</VBox>
